#include <iostream>
using namespace std;

string s1 = "afgerbc";
string s2 = "rdgnrqec";
int n1 = s1.length();
int n2 = s2.length();
int length[10][10];
void LCS(){
	for(int i=0;i<=n1;i++)
		length[i][0] = 0;
	for(int j=0;j<=n2;j++)
		length[0][j] = 0;
	for(int i=1;i<=n1;i++)
		for(int j=1;j<=n2;j++){
			if(s1[i-1]==s2[j-1])
				length[i][j] = 1+length[i-1][j-1];
			else
				length[i][j] = max(length[i-1][j], length[i][j-1]);
		}
}

int prev[10][10];

void LCS2(){
	for(int i=0;i<=n1;i++)
		length[i][0] = 0;
	for(int j=0;j<=n2;j++)
		length[0][j] = 0;
	for(int i=1;i<=n1;i++)
		for(int j=1;j<=n2;j++){
			if(s1[i-1]==s2[j-1]){
				length[i][j] = 1+length[i-1][j-1];
				prev[i][j] = 0; //upper left
			}
			else if(length[i-1][j]<length[i][j-1]){
				length[i][j] = length[i][j-1];
				prev[i][j] = 1; //left
			}
			else{
				length[i][j] = length[i-1][j];
				prev[i][j] = 2; //up
			}
		}
}

void print_LCS(int i, int j){
	if(i==0||j==0) return;
	if(prev[i][j]==0)
		cout<<s1[i]; //or s2[j]
	else if(prev[i][j]==1)
		print_LCS(i, j-1);
	else
		print_LCS(i-1, j);
}

int main() {
	LCS2();
	cout<<length[n1][n2]<<endl;
	print_LCS(n1, n2);
	return 0;
}
